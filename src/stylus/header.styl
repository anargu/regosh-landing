
.header
  position absolute
  bottom 20px
  left 0
  right 0
  z-index: 3
  text-align: center
.header a
  text-decoration none
  color lightColor
.header ul
  list-style-type: none
  margin: 20px 0 0 0
  padding: 0
  display: inline-block
  
.header li
  cursor pointer
  user-select none
  display: inline
  float left
  color whiteColor
.header li div
  padding: 4px 0px
  letter-spacing: 0.2em
  text-transform: uppercase
  font-size: 12px

.menu--item
  font-size: 12px
  letter-spacing: .25em
  text-transform: uppercase
  display inline-block
  cursor pointer
  user-select none
  position relative
  z-index: 20

.lateral-menu--right
  color whiteColor
  position: fixed;
  top: 50%
  z-index: 90
  user-select: none
  writing-mode: vertical-rl
  right: 10px
  -webkit-transform: translateY(-50%)
  transform: translateY(-50%)


@media screen and (min-width: 800px)
  .header li div
    padding 4px 28px
    letter-spacing: .25em
    font-size: 16px
  .header ul
    margin: 20px 0 0 12px
  .lateral-menu--right
    right: 50px
  .menu--item
    font-size: 16px