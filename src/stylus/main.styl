@import "theme.styl"
@import "./hover-effects.styl"

@import "./header.styl"
@import "./grid.styl"
@import "./dialog.styl"

html, body
  background: #040404
  margin 0
  font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji"

.section
  padding 80px 0 20px 0
  min-height 200px
.section h3
  font-size 14px
  letter-spacing: .25em
  text-transform: uppercase
  color lightColor
  text-align: center
  margin 20px 0 30px 0

.main-section-wrapper
  width 100%
  height 100vh
  background: #060606d4
  position relative
  z-index: 2

.main-section.section
  padding 0
  height 100% // 100vh
  width 100%
  max-width: 1200px
  margin 0 auto 0 auto
  // background darkColor
  color whiteColor
  display table
  position relative
  z-index: 2
.main-section-img
  position absolute
  top 0
  left 0
  right 0
  overflow hidden
  & img
    height 100vh
    min-width 100%
  & a
    position: absolute
    left: 21px
    bottom: 60px
    z-index: 10
    opacity 0.5
  & a:hover
    opacity 1.0

.top-bar
  position absolute
  top: 40px
  left 0
  z-index 4
  width 100%
  text-align: center
.top-bar div
  color lightColor
  display inline-block
  padding 0px 20px
  font-size: 10px
  letter-spacing: .25em
  text-transform: uppercase
  cursor pointer
  user-select none
.top-bar img
  width: 50px
#cyted-logo
  width auto
  height: 36px

.top-bar .logo-1
.top-bar .logo-2
.top-bar .logo-3
  position relative

.content-center
  display: table-cell
  vertical-align: middle
  text-align: center

.title
  display inline-block
  color lightColor
  border 5px lightColor solid
  padding 10px 24px 2px 24px
  border-radius 2px
  font-size 96px
  font-size: 48px
  font-family: BebasNeue
  font-weight: bold
  transition all .2s ease
// disabled
// .title:hover
//     text-shadow 4px 4px 1px #00ec336b, 0px 4px 1px #17eaffd6, 4px 0px 1px #ff0277d6

.text
  letter-spacing: .25em
  text-transform: uppercase
  font-size: 11px
  color whiteColor

.phrase
  letter-spacing: .25em
  text-transform: uppercase
  font-size: 11px
  margin: 32px 0px 0 0
  font-family: Arial
  color lightColor
  max-width: 700px
  & p
    display: inline-block
    margin: 0

.projects-section
  max-width 700px
  margin 0 auto 0 auto
.section.about
.section.team
.section.share
  max-width: 700px
  margin: 0 auto 0 auto
.section.share
  text-align: center
  padding 0 0 40px 0
.section.share p
  padding 20px 0 0 0
  color whiteColor
.section.about p
  padding: 0 12px 0 12px

.residence-label
  text-align: center
  font-size 11px
  letter-spacing: .25em
  text-transform: uppercase
  color lightColor
  margin 80px 0 40px 0
.member-item > img
  width: 100px
  border-radius: 90px
// .member-item:hover .mini-dialog
//   display: inline-block
  

.share-items-container
  text-align: center
.share-item
  display inline-block
  margin 20px
.share-item img
  width 24px

.hidden
	position: absolute
	overflow: hidden
	width: 0
	height: 0
	pointer-events: none

.tiny-footer
  padding 4px 8px
  background: #272727
  color whiteColor
  font-size: 12px
  font-weight: 100
.tiny-footer a
  text-decoration: none
  color lightColor
  font-weight: 700


.track-squares
  // height: 220px
  width: 100%
  position:relative
  // left: -220px

.square
  display: inline-block
  // width: 220px
  // height: 220px
  background: black
  /* border: 1px solid yellow; */
  /* flex: 0 0 auto; */
  position: absolute
.square.empty
  background: black
.square.proj > img
  height: 100%
  width: 100%
        

@media screen and (min-width: 800px)
  .top-bar img
    width 100px
  .top-bar .logo-1
    position absolute
    top 0
    left 50px
  .top-bar .logo-2
    position absolute
    top 0
    right 50px
  .top-bar .logo-3
    position absolute
    top 0
    right 50px
  .content-center
    padding: 0 70px
    text-align: left
  .phrase
    margin: 32px 20px 0 0
  .phrase > p
    font-size: 14px
  .title
    font-size 96px
  .main-section-img
    & a
      left: 64px

@media screen and (min-width: 1200px)
  .main-section-img
    & a
      left: calc(((100vw - 1200px) / 2) + 70px)