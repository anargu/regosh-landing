@import "_variables.styl"
@import "~bootstrap/dist/css/bootstrap.min.css"
@import "./hover-effects.styl"

@import "./header.styl"
@import "./grid.styl"

html, body
  background: #141414

.section
  padding 80px 0 20px 0
  min-height 200px
.section h3
  font-size 14px
  letter-spacing: .25em
  text-transform: uppercase
  color lightColor
  text-align: center
  margin 20px 0 30px 0

.main-section.section
  padding 0
  height 100vh
  width 100%
  // background darkColor
  background-image radial-gradient(rgba(19, 19, 19, 0.79), #131313)
  color whiteColor
  display table
  position relative
  z-index: 2
.main-section-img
  position absolute
  top 0
  left 0
  right 0
  overflow hidden
  & img
    height 100vh
    min-width 100%

.top-bar
  position absolute
  top 50px
  left 0
  z-index 4
  width 100%
.top-bar div
  color lightColor
  display inline-block
  padding 0px 20px
  font-size 14px
  letter-spacing: .25em
  text-transform: uppercase
  cursor pointer
  user-select none
.top-bar .logo-1
  position absolute
  top 0
  left 50px
.top-bar .logo-2
  position absolute
  top 0
  right 50px
.top-bar .logo-3
  position absolute
  top 0
  right 150px

.content-center
  display: table-cell
  vertical-align: middle
  text-align: center

.title
  display inline-block
  color lightColor
  border 5px lightColor solid
  padding 10px 24px 2px 24px
  border-radius 2px
  font-size 36px
  font-family: BebasNeue
  font-weight: bold
  transition all .2s ease
.title:hover
    text-shadow 4px 4px 1px #00ec336b, 0px 4px 1px #17eaffd6, 4px 0px 1px #ff0277d6

.phrase
  letter-spacing: .25em
  text-transform: uppercase
  font-size: 11px
  margin 32px 0 0 0
  font-family: Arial
  color lightColor

.projects-section
  max-width 700px
  margin 0 auto 0 auto